extends ../layouts/default
block content
  body:.wrapper
    header
      include ../views/navbar
      include ../views/menu
     section
      #inner-banner
      #inner-content-box#content-box
        .container
          #offerings
            .col-md-9.text-right
              ul.list-inline
                li
                  a(href="#",onclick="printFunction()" target="_blank")
                    i.fa.fa-lg.fa-print
                li
                  a#pdf
                    i.fa.fa-lg.fa-file-pdf-o
                li
                  a(href="/contactform")
                    i.fa.fa-lg.fa-envelope
            .col-md-9#content-data
              h2 #{data.crms[0].heading}
              .row
                .col-md-4
                  if data.crms.length
                        img(id="image",src=data.crms[0]._.image.limit(640,640))
                .col-md-8
                    p
                      | #{data.crms[0].headingText}
                    p
                      | #{data.crms[0].text}
                    p
                      | #{data.crms[0].headingText1}
                    p
                      | #{data.crms[0].subText}
                    p
                      | #{data.crms[0].subString}
                    p
                      | #{data.crms[0].headingText2}
                    p
                      | #{data.crms[0].shortText}


            include ../views/footermenunavigation
      .container-fluid
        .row
          footer
            include ../views/footer